<!-- res/drawable/border_style.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền bên trong khung, nếu không muốn nền thì dùng màu trong suốt -->
    <solid android:color="#FFFFFF" />

    <!-- Đường viền khung -->
    <stroke
        android:width="6dp"
        android:color="#000000" />

    <!-- Đệm bên trong đường viền -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- Bo tròn các góc -->
    <corners android:radius="16dp" />
</shape>
