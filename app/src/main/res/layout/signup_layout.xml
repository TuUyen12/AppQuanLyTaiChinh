<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/image_sign_up"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/image_sign_up"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableLeft="@drawable/user_with_size"
        />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Your Name"
        app:layout_constraintTop_toBottomOf="@id/image_sign_up"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableLeft="@drawable/user_with_size"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="20dp"
        android:paddingLeft="20dp">
    </EditText>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:hint="Your Email"
        app:layout_constraintTop_toBottomOf="@id/et_username"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableLeft="@drawable/mail_with_size"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="20dp"
        android:paddingLeft="20dp"
        android:inputType="textEmailAddress">
    </EditText>
    <LinearLayout
        android:id="@+id/ll_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:hint="********"
            android:drawableLeft="@drawable/key_with_size"
            android:background="@drawable/custom_edittext"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            android:inputType="textPassword">
        </EditText>
        <ImageButton
            android:id="@+id/ib_eye"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/hide_with_size"
            android:background="@android:color/transparent"
            android:contentDescription="@string/my_button_description">

        </ImageButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_password"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:hint="********"
            android:drawableLeft="@drawable/key_with_size"
            android:background="@drawable/custom_edittext"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            android:inputType="textPassword">
        </EditText>
        <ImageButton
            android:id="@+id/ib_eye1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/hide_with_size"
            android:background="@android:color/transparent"
            android:contentDescription="@string/my_button_description">

        </ImageButton>
    </LinearLayout>

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="sign up"
        android:textAllCaps="true"
        android:textSize="32sp"
        android:background="@drawable/button_style">
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>
