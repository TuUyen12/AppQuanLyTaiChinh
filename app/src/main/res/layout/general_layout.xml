<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11">
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#3681AD">

        <ImageButton
            android:id="@+id/ib_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_home_foreground"
            android:contentDescription="Home" /> <!-- Thêm contentDescription -->

        <ImageButton
            android:id="@+id/ib_calendar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_calendar_foreground"
            android:contentDescription="Calendar" /> <!-- Thêm contentDescription -->

        <ImageButton
            android:id="@+id/ib_insert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_insert_foreground"
            android:contentDescription="Insert" /> <!-- Thêm contentDescription -->

        <ImageButton
            android:id="@+id/ib_chart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_chart_foreground"
            android:contentDescription="Chart" /> <!-- Thêm contentDescription -->

        <ImageButton
            android:id="@+id/ib_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_setting_foreground"
            android:contentDescription="Settings" /> <!-- Thêm contentDescription -->

    </LinearLayout>
</LinearLayout>
