<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#3682AE">

        <ImageButton
            android:id="@+id/ib_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Home"
            android:src="@drawable/home_with_size" /> <!-- Thêm contentDescription -->

        <ImageButton
            android:id="@+id/ib_calendar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Calendar"
            android:src="@drawable/calendar_with_size" /> <!-- Thêm contentDescription -->

        <ImageButton
            android:id="@+id/ib_insert"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Insert"
            android:src="@drawable/insert_with_size" /> <!-- Thêm contentDescription -->

        <ImageButton
            android:id="@+id/ib_chart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Chart"
            android:src="@drawable/chart_with_size" /> <!-- Thêm contentDescription -->

        <ImageButton
            android:id="@+id/ib_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Setting"
            android:src="@drawable/setting_with_size" /> <!-- Thêm contentDescription -->

    </LinearLayout>
</LinearLayout>
